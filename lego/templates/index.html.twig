{% extends 'base.html.twig' %}
{% block title %} Acceuil {% endblock %}

{% block body %}

    <div id="carouselExampleIndicators" class="carousel slide  " data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="img-fluid" src="{{ asset('img/lego.jpg') }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="img-fluid" src="{{ asset('img/lego2.jpg') }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="img-fluid" src="{{ asset('img/lego3.jpg') }}" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <nav class="navbar2 navbar-expand-sm">
        <!-- Links -->
        <ul class="navbar-nav navbar-center">
            <!-- Dropdown -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle btnRed" href="#" id="navbardrop" data-toggle="dropdown">
                    Par gammes
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">DUPLO</a>
                    <a class="dropdown-item" href="#">Architecture</a>
                    <a class="dropdown-item" href="#">Technique</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle btnRed" href="#" id="navbardrop" data-toggle="dropdown">
                    Par thèmes
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Star Wars™</a>
                    <a class="dropdown-item" href="#">Harry Potter™</a>
                    <a class="dropdown-item" href="#">Marvel™</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle btnRed" href="#" id="navbardrop" data-toggle="dropdown">
                    Par ages
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Préscolaire</a>
                    <a class="dropdown-item" href="#">9 à 11 ans</a>
                    <a class="dropdown-item" href="#">A patir de 12ans</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle btnRed" href="#" id="navbardrop" data-toggle="dropdown">
                    Par prix
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">De 1 à 50 euros</a>
                    <a class="dropdown-item" href="#">De 50 à 100 euros</a>
                    <a class="dropdown-item" href="#">100 euros et plus </a>
                </div>
            </li>
        </ul>
    </nav>

    <div class="container-fluid">

        <div class="row text-center mt-5">


            {% for product in product %}
                <div class="col-lg-3 col-md-3 mb-5">
                    <div class="card h-100 bg-dark text-white">
                        <a href="{{ path('detail', {'id': product.id}) }}">
                            <img class="card-img-top" src="{{ product.image }}" alt="">
                        </a>
                        <div class="card-body">
                            <p class="card-text"> {{ product.wording }}</p>
                            {# <p class="card-text">{{ product.description }}</p> #}

                        </div>
                        <div class="card-footer">
                            {% set res ="" %}
                            {% set qte = 0 %}

                            {% for item in panier %}

                                {% if item.product.id == product.id %}

                                    {% set res = true %}
                                    {% set qte = item.quantity %}

                                {% endif %}

                            {% endfor %}
                            <div class="row">
                            <div class="offset-5">
                            <span class="price "> {{ product.price }} € </span>
                            </div>
                            <div class="col-1 offset-3">
                            <strong><a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btnRed"><i class="fas fa-cart-plus"></i></a></strong>
                            </div>
                            </div>


                        </div>
                    </div>
                    {% if  res == true %}

                        <small class="text-primary">Votre panier possede
                            actuellement {{ qte }} exemplaire de ce produits</small>
                    {% endif %}
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}