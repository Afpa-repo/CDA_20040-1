{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <div class="container-fluid ">
        <div class="mt-5">
            <h1>Votre Panier </h1>
        </div>
        {% if items | length > 0 %}

            <table class="table text-center">
                <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}

                    <tr>
                        <td>{{ item.product.wording }}</td>
                        <td>{{ item.product.price }} €</td>

                        <td>
                            <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-primary mr-1"><strong><i class="fas fa-minus"></i></i></strong></a> {{ item.quantity }}
                            <a href="{{ path('cart_add', {'id': item.product.id}) }}" class="btn btn-primary ml-1"><strong><i class="fas fa-plus"></i></a></strong>
                        </td>

                        <td>{{ item.product.price * item.quantity }} €</td>
                        <td>
                            <a href="{{ path('cart_delete', {'id' : item.product.id}) }}" class="btn btnRed"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
                <tfoot>
                <td colspan="3" class="text-right "><strong>Total TTC :</strong></td>
                <td> <strong>{{ total }} € </strong> </td>

                {% if app.user %}
                <td><a href="{{ path('cart_validation')}}" class="btn btn-success">Valider</a></td>
                {% else %}
                <p>Vous devez vous connecter afin de finaliser votre commande : <a href="{{ path('app_login') }}">Se connecter</a></p>
                {% endif %}

                </tfoot>

            </table>
        {% else %}
            <p>Votre panier est vide</p>
        {% endif %}


    </div>
    <div>
    </div>
{% endblock %}
